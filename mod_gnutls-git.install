post_install() {
  echo " >>> To install mod_gnutls, add the following line in"
  echo " >>> /etc/httpd/conf/httpd.conf"
  echo " >>>"
  echo " >>> LoadModule	gnutls_module modules/mod_gnutls.so"
  echo " >>>"
  echo " >>> and restart/reload Apache."
}

post_upgrade() {
  post_install
}

